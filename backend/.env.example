# ============================================
# LEXY Backend - Environment Variables
# ============================================

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=8000
APP_BASE_URL=http://localhost:8080

# Database Configuration (PostgreSQL)
DATABASE_URL=database url

# JWT Authentication
JWT_SECRET=jwt secret
JWT_EXPIRES_IN=1h
BCRYPT_SALT_ROUNDS=12

# Logging
LOG_LEVEL=info

# Mail Configuration
RESEND_API_KEY=resend api key
MAIL_FROM="Lexy Support <no-reply@lexy.app>"

# MLend (Python Service)
MLEND_URL=http://localhost:5000/api
ML_CALLBACK_SECRET=this-is-a-callback-secret-string
PUBLIC_APP_URL=http://localhost:8000

UPLOADS_DIR=./uploads

# Stripe Configuration
STRIPE_PRICE_BUSINESS_MONTHLY=price_...
STRIPE_PRICE_BUSINESS_YEARLY=price_...
STRIPE_PRICE_PRO_MONTHLY=price_...
STRIPE_PRICE_PRO_YEARLY=price_...

STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_MODE=test
STRIPE_WEBHOOK_SECRET=...


